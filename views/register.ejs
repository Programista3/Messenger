<!doctype html>
<html>
    <head>
		<meta charset="utf-8">
		<meta name="author" content="Grzegorz Babiarz">
		<title>Messenger - Rejestracja</title>
		<link rel="stylesheet" href="/css/styles.css">
    </head>
    <body class="bg-green">
        <form action="" method="post" class="login-form">
			<div class="form-group input-half">
				<input type="text" name="firstname" placeholder="Imię">
				<input type="text" name="lastname" placeholder="Nazwisko">
			</div>
			<div class="form-group input-full">
					<input type="text" name="username" placeholder="Nazwa użytkownika">
			</div>
			<div class="form-group input-full">
				<input type="email" name="email" placeholder="Email">
			</div>
			<div class="form-group input-full">
				<input type="password" name="password" placeholder="Hasło">
			</div>
			<div class="form-group input-full">
				<input type="password" name="passwordRepeat" placeholder="Powtórz hasło">
			</div>
			<div class="form-group input-full">
				<input type="submit" name="register" value="Zarejestruj się">
			</div>
			<div class="pad5">
				Masz już konto? <a href="/login">Zaloguj się</a>
			</div>
			<div class="alert">
				<% if(typeof message != 'undefined') { %>
					<div class="alert"><%= message %></div>
				<% } %>
			</div>
		</form>
		<span><a href="/changelog">Changelog</a></span>
		<span class="version"><%= version %></span>
    </body>
</html>