<!doctype html>
<html>
    <head>
		<meta charset="utf-8">
		<meta name="author" content="Grzegorz Babiarz">
		<title>Komunikator - Logowanie</title>
		<link rel="stylesheet" href="/css/styles.css">
		<script>
			if(window.location.hash != '') {
				window.location.hash = '';
			}
		</script>
    </head>
    <body class="bg-green">
        <form action="" method="post" class="login-form">
			<div class="form-group input-full">
					<input type="text" name="username" placeholder="Nazwa użytkownika lub email">
			</div>
			<div class="form-group input-full">
				<input type="password" name="password" placeholder="Hasło">
			</div>
			<div class="form-group input-full">
				<input type="submit" name="login" value="Zaloguj się">
			</div>
			<div class="pad5">
				Nie masz konta? <a href="/register">Zarejestruj się</a>
			</div>
			<div class="alert">
				<% if(typeof message != 'undefined') { %>
					<div class="alert"><%= message %></div>
				<% } %>
			</div>
		</form>
		<span><a href="/changelog">Changelog</a></span>
		<span class="version"><%= version %></span>
    </body>
</html>